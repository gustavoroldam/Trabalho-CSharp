@model IEnumerable<Trabalho.Models.Pivot.ConsultaPivot>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pivot</h1>

<table class="table table-bordered">
    <thead>
        <tr style="background-color: #ADD8E6; color: #000;">
            <th>
                Médico
            </th>
            <th>
                Medicamento
            </th>
            <th>
                Quantidade Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            float total = 0;
        }

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomeMed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomeMedicamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdeUsada)
               
            </td>
                @{total = total + item.QtdeUsada;}
        </tr>
}
    </tbody>
</table>

<h2>Total = <b>@total</b> </h2>
